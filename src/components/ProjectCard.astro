---
import BloodGif from '../images/blood.gif'

interface Props {
  project_name: string
  tags: string
  href: string
  image: string
}

const {project_name, tags, href, image} = Astro.props
---

<div
  class="max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700"
>
  <a href="#">
    <img
      class="rounded-t-lg max-h-44 w-full"
      src={image}
      alt=""
    />
  </a>
  <div class="p-5">
    <a href="#">
      <h5
        class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
      >
        {project_name}
      </h5>
    </a>
    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{tags}</p>
    <a
    href=`${href}`
      class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-gray-800 rounded-lg hover:bg-gray-950 focus:ring-4 focus:outline-none focus:ring-gray-500 dark:bg-redPrimaryColor dark:hover:bg-hoverRedPrimaryColor dark:focus:ring-redSecondaryColor"
    >
      Ver mais
      <svg
        class="w-3.5 h-3.5 ml-2"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"></path>
      </svg>
    </a>
    <img src={BloodGif.src} alt="" class="absolute w-16" />
  </div>
</div>
