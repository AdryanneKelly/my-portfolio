---
import FlowerVampBordered from '../images/flower-vamp-bordered.png'
---

<nav class="bg-gray-900">
  <div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
    <div class="relative flex h-16 items-center justify-between">
      <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
        <!-- Mobile menu button-->
        <button
          type="button"
          class="relative inline-flex items-center justify-center rounded-md p-2 text-gray-400 hover:bg-gray-700 hover:text-white focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white"
          aria-controls="mobile-menu"
          aria-expanded="false"
          id="mobileMenu"
        >
          <span class="absolute -inset-0.5"></span>
          <span class="sr-only">Abrir menu principal</span>
          <!--
            Icon when menu is closed.

            Menu open: "hidden", Menu closed: "block"
          -->
          <svg
            class="block h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
          </svg>
          <!--
            Icon when menu is open.

            Menu open: "block", Menu closed: "hidden"
          -->
          <svg
            class="hidden h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <div
        class="flex flex-1 items-center justify-center sm:items-stretch sm:justify-start"
        id="navMenu"
      >
        <div class="flex flex-shrink-0 items-center">
          <img
            class="h-12 w-auto cursor-fancy"
            src={FlowerVampBordered.src}
            alt="Vamp Icone"
          />
        </div>
        <div class="hidden sm:ml-6 sm:block">
          <div class="flex space-x-4">
            <!-- Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white" -->
            <a
              href="#"
              class="bg-gray-900 text-white rounded-md px-3 py-2 text-xl font-medium hover:bg-gray-950 hover:text-redPrimaryColor"
              aria-current="page">Salão principal</a
            >
            <!-- <a
              href="#"
              class="text-white hover:bg-gray-950 rounded-md px-3 py-2 text-xl font-medium hover:text-redPrimaryColor"
              ></a
            > -->
            <a
              href="#"
              class="text-white hover:bg-gray-950 hover:text-redPrimaryColor rounded-md px-3 py-2 text-xl font-medium"
              >Biblioteca</a
            >
            <a
              href="#"
              class="text-white hover:bg-gray-950 hover:text-redPrimaryColor rounded-md px-3 py-2 text-xl font-medium"
              >Portais</a
            >
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Mobile menu, show/hide based on menu state. -->
  <div
    class="md:hidden fixed overflow-hidden
  transition-all duration-500 w-full h-0 bg-gray-900"
    id="mobile-menu"
  >
    <div class="space-y-1 px-2 pb-3 pt-2">
      <!-- Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white" -->
      <a
        href="#"
        class="text-white hover:text-redPrimaryColor hover:bg-gray-950 block rounded-md px-3 py-2 text-base font-medium"
        aria-current="page">Salão principal</a
      >
      <a
        href="#"
        class="text-gray-300 hover:bg-gray-950 hover:text-redPrimaryColor block rounded-md px-3 py-2 text-base font-medium"
        >Biblioteca</a
      >
      <a
        href="#"
        class="text-gray-300 hover:bg-gray-950 hover:text-redPrimaryColor block rounded-md px-3 py-2 text-base font-medium"
        >Portais</a
      >
      <!-- <a
        href="#"
        class="text-gray-300 hover:bg-gray-950 hover:text-redPrimaryColor block rounded-md px-3 py-2 text-base font-medium"
        >Calendar</a
      > -->
    </div>
  </div>
</nav>
<div
  class="cursor absolute pointer-events-none z-[111] transition-all duration-500 ease-out animate-bounce"
>
  <img
    class="h-10 w-10"
    src="https://media1.giphy.com/media/0xR7MUO0hJfWtco7C6/giphy.gif?cid=6c09b952a9wjyhs5jk8kzw6as2pdohxb8ohv2u2vg8v1871n&rid=giphy.gif&ct=s"
  />
</div>

<script>
  document.getElementById('mobileMenu')?.addEventListener('click', function () {
    const navMenu = document.getElementById('mobile-menu')
    navMenu?.classList.toggle('h-0')
    navMenu?.classList.toggle('h-[20%]')
    navMenu?.classList.toggle('opacity-0')
    navMenu?.classList.toggle('opacity-100')
    // navMenu?.classList.toggle('hidden')
  })
</script>
